@model TekkenTI2.Models.Personagens

@{
    ViewBag.Title = "Apagar personagem";
}

<h2>Apagar personagem</h2>

<h3>Tem a certeza que pretende apagar esta personagem da lista?</h3>
<div>

    <hr />
    @* HTML Helper para apresentar as mensagens de erro *@
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Origem)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Origem)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Estreia)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Estreia)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TipoLuta)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TipoLuta)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Fotografia)
        </dt>

        <dd>
            @*@Html.DisplayFor(model => model.Fotografia)*@
            <a href="~/imagensPers/@Model.Fotografia" target="_blank">
                <img src="~/imagensPers/@Model.Fotografia" width="150" height="160" />
            </a>
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Regressar à lista de personagens", "Index")
        </div>
    }
</div>
