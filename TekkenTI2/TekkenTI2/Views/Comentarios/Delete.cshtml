@model TekkenTI2.Models.Comentarios

@{
    ViewBag.Title = "Delete";
}
@* imagem de fundo *@
<style>
    body {
        background-image: url(../../FundoPersonagens/Fundo3.jpg);
    }

    .button {
        display: inline-block;
        padding: 10px 20px;
        font-size: 14px;
        cursor: pointer;
        text-align: center;
        font-family: 'Lucida Console';
        color: black;
        background-color: white;
        border: blue;
        border-radius: 12px;
        border: 2px solid #191970;
    }

        .button:hover {
            background-color: #D3D3D3
        }

        .button:active {
            background-color: #A9A9A9;
            transform: translateY(2px);
        }
</style>


<div style="font-family: 'Lucida Console'; text-align: left;color: white; font-size: 35px;font-weight: bold;margin-top: 50px;">Tens a certeza que queres apagar este comentário?</div>
<div>
    <hr />
    <div class="dl-horizontal">
        @*Título do comentário a apagar*@
        <div style="color:white;">
            @Html.DisplayFor(model => model.Jogo.Titulo)
        </div>
        @*Utilizador que fez o comentário a apagar*@
        <div style="color:white;">
            @Html.DisplayFor(model => model.Utilizadores.UserName)
        </div>
        @*Texto do comentário a apagar*@
        <div style="color:red;font-family:'Lucida Console'; font-size:16px;">
            <strong>
                @Html.DisplayFor(model => model.Texto)
            </strong>
        </div>
        @*Data do comentário*@
        <div style="color:white;font-family:'Lucida Console'; ">
            @Html.DisplayFor(model => model.DataComentario)
        </div>
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color" style="margin-top:10px;">
            <input type="submit" value="Delete" class="button" /> |
            @*Botão para voltar à lista de Jogos*@
            <div class="btn-group" role="group">
                <button type="button" class="button" onclick="location.href='@Url.Action("Details","Jogos",new { id = Model.ID })'">Lista de Comentários.</button>
            </div>
        </div>
    }
</div>
