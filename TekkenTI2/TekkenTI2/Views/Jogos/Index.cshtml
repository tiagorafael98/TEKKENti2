@model IEnumerable<TekkenTI2.Models.Jogos>

@{
    ViewBag.Title = "Index";
}

<style>
    body {
        background-image: url(../../FundoPersonagens/Fundo3.jpg);
    }
</style>


<div style=" display:flex; flex-wrap:wrap; flex-direction:row; justify-content:space-around; align-content:center;">
        @foreach (var item in Model)
        {

            <div style="padding-top: 15px">
                <a href="/Jogos/Details/@item.ID">
                    <img src="~/ImagensCapa/@item.Fotografia" width="300" height="360" />
                </a>
            </div>
        }
    
</div>
<p>
    @Html.ActionLink("Adicionar novo jogo", "Create")
</p>


